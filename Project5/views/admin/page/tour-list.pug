extends ../layouts/default.pug
include ../mixins/checkbox.pug

block main
  h1.box-title Quản lý tour

  //- Section 4
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item
        select(filter-status)
          option(value="") Trạng thái
          option(value="active") Hoạt động
          option(value="inactive") Tạm dừng
      .inner-item
        select(filter-createdBy)
          option(value="") Người tạo
          each i in accountAdminList
            option(value=i._id) #{i.fullname}
      .inner-item.inner-date
        input(type="date" filter-startDate)
        span -
        input(type="date" filter-endDate)
      .inner-item
        select
          option(value="") Danh mục
          option(value="") Danh mục 1
          option(value="") Danh mục 2
      .inner-item
        select
          option(value="") Mức giá
          option(value="") Dưới 1tr
          option(value="") Từ 1tr đến 2tr
          option(value="") Từ 2tr đến 6tr
          option(value="") Trên 6tr
      .inner-item.inner-reset(filter-reset)
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc
  //- End Section 4

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(change-multi data-api=`/${pathAdmin}/tours/change-multi-status`)
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="active") Hoạt động
            option(value="inactive") Dừng hoạt động
            option(value="delete") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm" search-item)
      .inner-button-create
        a(href=`/${pathAdmin}/tours/create`) + Tạo mới
      .inner-button-trash
        a(href=`/${pathAdmin}/tours/trash`) Thùng rác
  //- End Section 5

  //- Section 6
  .section-6 
    .table-2 
      table 
        thead 
          tr 
            th.text-left
              +checkbox-30("check-all","check-all")
            th.text-left Tên tour
            th.text-center Ảnh đại diện
            th.text-left Giá
            th.text-left Còn lại
            th.text-center Vị trí
            th.text-center Trạng thái
            th.text-left Tạo bởi
            th.text-left Cập nhật bởi
            th.text-left Hành động
        tbody 
          each i in tourList
            tr 
              td.text-left
                +checkbox-30("check-item", "check-item", i._id)
              td.text-left #{i.name}
              td.text-center
                img(src=i.avatar class="inner-avatar")
              td.text-left 
                div NL: #{i.priceAdult.toLocaleString("vi-VN")}đ
                div TE: #{i.priceChildren.toLocaleString("vi-VN")}đ
                div EB: #{i.priceBaby.toLocaleString("vi-VN")}đ
              td.text-left
                div NL: #{i.stockAdult}
                div TE: #{i.stockChildren}
                div EB: #{i.stockBaby}
              td.text-center #{i.position}
              td.text-center
                if i.status=="active"
                  .tag.tag-green Hoạt động
                else if i.status=="inactive"
                  .tag.tag-red Tạm dừng
              td.text-left
                if(i.createdByWho)
                  div #{i.createdByWho}
                  div.inner-small #{i.createdAtFormat}
                td.text-left
                if(i.updatedByWho)
                  div #{i.updatedByWho}
                  div.inner-small #{i.updatedAtFormat}
              td.text-left
                .box-actions 
                  a(href=`/${pathAdmin}/tours/edit/${i._id}` class="inner-edit")
                    <i class="fa-solid fa-pen-to-square"></i>
                  button(class="inner-remove" button-delete data-api=`/${pathAdmin}/tours/delete/${i._id}`)
                    <i class="fa-solid fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  .section-7
    span(class="inner-label") Hiển thị 1 - 9 của 78
    select(class="inner-pagination")
      option Trang 1
      option Trang 2
      option Trang 3
  //- End Section 7