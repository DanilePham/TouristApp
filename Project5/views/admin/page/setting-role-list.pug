extends ../layouts/default.pug
include ../mixins/checkbox.pug

block main
  h1.box-title Nhóm quyền

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="") Hoạt động
            option(value="") Dừng hoạt động
            option(value="") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        i.fa-solid.fa-magnifying-glass
        input(type="text" placeholder="Tìm kiếm")
      .inner-button-create
        a(href=`/${pathAdmin}/settings/role/create`)  + Tạo mới
  //- End Section 5

  //- Section 6
  .section-6 
    .table-2 
      table 
        thead 
          tr 
            th.text-left
              +checkbox-30("", "")
            th.text-left Tên nhóm quyền
            th.text-left Mô tả ngắn
            th.text-left Tạo Bởi 
            th.text-left Cập Nhập Bởi 
            th.text-left Hành động
        tbody 
          each item in roleList
            tr 
              td.text-left
                +checkbox-30("", "")
              td.text-left #{item.name}
              td.text-left #{item.description}
              td.text-left
                if item.createdByWho
                  div #{item.createdByWho}
                  div.inner-small #{item.createdAtFormat}
              td.text-left
                if item.updatedByWho
                  div #{item.updatedByWho}
                  div.inner-small #{item.updatedAtFormat}
              td.text-left
                .box-actions 
                  a(href=`/${pathAdmin}/settings/role/edit/${item._id}` class="inner-edit")
                    i.fa-solid.fa-pen-to-square
                  button(class="inner-remove" button-delete data-api=`/${pathAdmin}/settings/role/delete/${item._id}`)
                    i.fa-solid.fa-trash-can
  //- End Section 6

  //- Section 7
  .section-7
    span(class="inner-label") Hiển thị 1 - 9 của 78
    select(class="inner-pagination")
      option Trang 1
      option Trang 2
      option Trang 3
  //- End Section 7