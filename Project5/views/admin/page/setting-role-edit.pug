extends ../layouts/default.pug
include ../mixins/checkbox.pug

block main
  h1.box-title Chinh Sua nhóm quyền

  .section-8
    form(action="" id="setting-role-edit-form")
      .inner-group(style="display:none;")
        label.inner-label(for="id") ID *
        input(type="text" id="id" name="id" value=roleDetail._id)
      .inner-group 
        label.inner-label(for="name") Tên nhóm quyền
        input(type="text" id="name" name="name" value=roleDetail.name)
      .inner-group 
        label.inner-label(for="description") Mô tả ngắn
        input(type="text" id="description" name="description" value=roleDetail.description)
      .inner-group 
        label.inner-label Phân quyền
        .inner-checkbox-list 
          each item, index in permissions
            .inner-checkbox-item 
              +checkbox-30("permissions", `permissions-${index}`, item.value, roleDetail.permissions.includes(item.value))
              label(for=`permissions-${index}`) #{item.label} 
      .inner-button.inner-two-col
        button Update
    .inner-back 
      a(href=`/${pathAdmin}/settings/role/list`) Quay lại danh sách