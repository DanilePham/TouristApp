extends ../layouts/account.pug

block main
  .form-account 
    h1.inner-title Đổi mật khẩu
    .inner-desc Vui lòng nhập mật khẩu để tiếp tục
    form(action="" class="inner-form" id="resetPasswordForm")
      .inner-group 
        label.inner-label(for="password") Mật khẩu mới
        input(
          type="password" 
          id="password" 
          name="password" 
          class="inner-control"
        )
      .inner-group 
        label.inner-label(for="confirmPassword") Xác nhận mật khẩu
        input(
          type="password" 
          id="confirmPassword" 
          name="confirmPassword" 
          class="inner-control"
        )
      button.inner-button Thay đổi
      .inner-more
        span Bạn đã nhớ mật khẩu?
        a(href=`/${pathAdmin}/account/login`) Đăng nhập