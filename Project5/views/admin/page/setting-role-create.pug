extends ../layouts/default.pug
include ../mixins/checkbox.pug

block title
  title Tạo nhóm quyền

block main
  h1.box-title Tạo nhóm quyền

  .section-8
    form(action="")
      .inner-group 
        label.inner-label(for="name") Tên nhóm quyền
        input(type="text" id="name" name="name")
      .inner-group 
        label.inner-label(for="description") Mô tả ngắn
        input(type="text" id="description" name="description")
      .inner-group 
        label.inner-label Phân quyền
        .inner-checkbox-list 
          .inner-checkbox-item 
            +checkbox-30("permissions", "permissions-1")
            label(for="permissions-1") Xem trang Tổng quan
          .inner-checkbox-item 
            +checkbox-30("permissions", "permissions-2")
            label(for="permissions-2") Xem danh mục
          .inner-checkbox-item 
            +checkbox-30("permissions", "permissions-3")
            label(for="permissions-3") Tạo danh mục
          .inner-checkbox-item 
            +checkbox-30("permissions", "permissions-4")
            label(for="permissions-4") Sửa danh mục
          .inner-checkbox-item 
            +checkbox-30("permissions", "permissions-5")
            label(for="permissions-5") Xóa danh mục
      .inner-button.inner-two-col
        button Tạo mới
    .inner-back 
      a(href="#") Quay lại danh sách