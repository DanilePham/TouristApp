extends ../layouts/default.pug

block main
  h1.box-title Chỉnh sửa tài khoản quản trị

  .section-8
    form(action="" id="setting-account-admin-edit-form")
      .inner-group(style="display:none;")
        label.inner-label(for="id") ID *
        input(type="text" id="id" name="id" value=accountAdminDetail._id)
      .inner-group 
        label.inner-label(for="fullname") Họ tên
        input(type="text" id="fullname" name="fullname" value=accountAdminDetail.fullname)
      .inner-group 
        label.inner-label(for="email") Email
        input(type="email" id="email" name="email" value=accountAdminDetail.email)
      .inner-group 
        label.inner-label(for="phone") Số điện thoại
        input(type="text" id="phone" name="phone" value=accountAdminDetail.phone)
      .inner-group 
        label.inner-label(for="role") Nhóm quyền
        select(id="role" name="role")
          each item in roleList
            option(value=item._id selected=(item._id == accountAdminDetail.role)) #{item.name} 
      .inner-group 
        label.inner-label(for="positionCompany") Chức vụ
        input(type="text" id="positionCompany" name="positionCompany" value=accountAdminDetail.positionCompany)
      .inner-group 
        label.inner-label(for="status") Trạng thái
        select(id="status" name="status")
          option(value="initial" selected=(accountAdminDetail.status == "initial")) Khởi Tạo
          option(value="active" selected=(accountAdminDetail.status == "active")) Hoạt động
          option(value="inactive" selected=(accountAdminDetail.status == "inactive")) Tạm dừng
      .inner-group.inner-two-col
        label.inner-label(for="avatar") Ảnh đại diện
        div(class="inner-upload-image")
          input(type="file" id="avatar" name="avatar" filepond-image image-default=accountAdminDetail.avatar)
      .inner-button.inner-two-col
        button Cập nhật
    .inner-back 
      a(href=`/${pathAdmin}/settings/account-admin/list`) Quay lại danh sách