extends ../layouts/default.pug

block title
  title Thông tin website

block main
  h1.box-title Thông tin website

  .section-8
    form(action="")
      .inner-group 
        label.inner-label(for="websiteName") Tên website
        input(type="text" id="websiteName" name="websiteName" value="28.TRAVEL")
      .inner-group 
        label.inner-label(for="phone") Số điện thoại
        input(type="text" id="phone" name="phone" value="0123456789")
      .inner-group 
        label.inner-label(for="email") Email
        input(type="email" id="email" name="email" value="contact@28.travel.com")
      .inner-group 
        label.inner-label(for="address") Địa chỉ
        input(type="text" id="address" name="address" value="Số 123, đường ABC")
      .inner-group
        label.inner-label(for="logo") Logo
        div(class="inner-upload-image")
          input(type="file" id="logo" name="logo" filepond-image)
      .inner-group
        label.inner-label(for="favicon") Favicon
        div(class="inner-upload-image")
          input(type="file" id="favicon" name="favicon" filepond-image)
      .inner-button.inner-two-col
        button Cập nhật
    .inner-back 
      a(href="#") Quay lại danh sách