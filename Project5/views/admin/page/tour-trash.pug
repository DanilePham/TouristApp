        tbody 
          tr 
            td.text-left
              +checkbox-30("", "")
            td.text-left Tour Hạ Long
            td.text-center
              img(src="assets/images/tour-1.png" class="inner-avatar")
            td.text-left 
              div NL: 1.900.000đ
              div TE: 1.600.000đ
              div EB: 1.000.000đ
            td.text-left
              div NL: 30
              div TE: 20
              div EB: 10
            td.text-center 1
            td.text-center
              .tag.tag-orange Khởi tạo
            td.text-left
              div Lê Văn A
              div.inner-small 16:30 - 20/10/2024
            td.text-left
              div Lê Văn A
              div.inner-small 16:30 - 20/10/2024
            td.text-left
              .box-actions 
                a(href="#" class="inner-undo")
                  <i class="fa-solid fa-rotate-left"></i>
                a(href="#" class="inner-remove")
                  <i class="fa-solid fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  .section-7
    span(class="inner-label") Hiển thị 1 - 9 của 78
    select(class="inner-pagination")
      option Trang 1
      option Trang 2
      option Trang 3
  //- End Section 7