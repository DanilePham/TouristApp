extends ../layouts/default.pug
include ../mixins/checkbox.pug

block title
  title Quản lý đơn hàng

block main
  h1.box-title Quản lý đơn hàng

  //- Section 4
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item
        select
          option(value="") Trạng thái
          option(value="") Hoạt động
          option(value="") Tạm dừng
      .inner-item.inner-date
        input(type="date")
        span -
        input(type="date")
      .inner-item
        select
          option(value="") Phương thức thanh toán
          option(value="") Tiền mặt
          option(value="") Chuyển khoản
          option(value="") Ví Momo
      .inner-item
        select
          option(value="") Trạng thái thanh toán
          option(value="") Chưa thanh toán
          option(value="") Đã thanh toán
      .inner-item.inner-reset
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc
  //- End Section 4

  //- Section 5
  .section-5
    .inner-wrap
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm")
  //- End Section 5

  //- Section 6
  .section-6 
    .table-2 
      table 
        thead 
          tr 
            th.text-left Mã
            th.text-left Thông tin khách
            th.text-left Danh sách tour
            th.text-left Thanh toán
            th.text-left Trạng thái
            th.text-right Ngày đặt
            th.text-left Hành động
        tbody 
          tr 
            td.text-left
              .text-primary OD000001
            td.text-left
              div Họ tên: Lê Văn A
              div SĐT: 0123456789
              div Ghi chú: Test...
            td.text-left 
              .tour-list 
                .tour-item 
                  img(src="assets/images/tour-1.png" class="inner-image")
                  .inner-content 
                    .inner-name Tour Hạ Long
                    .inner-desc 
                      div Người lớn: 3 x 1.500.000đ
                      div Trẻ em: 2 x 1.300.000đ
                      div Em bé: 2 x 1.000.000đ
                .tour-item 
                  img(src="assets/images/tour-1.png" class="inner-image")
                  .inner-content 
                    .inner-name Tour Hạ Long
                    .inner-desc 
                      div Người lớn: 3 x 1.500.000đ
                      div Trẻ em: 2 x 1.300.000đ
                      div Em bé: 2 x 1.000.000đ
            td.text-left 
              div Tổng tiền: 10.000.000đ
              div Giảm: 400.000đ
              div Mã giảm: TOURMUAHE2024
              div Thanh toán: 9.600.000đ
              div PTTT: Ví Momo
              div TTTT: Đã thanh toán
            td.text-left 
              .tag.tag-orange Khởi tạo
              //- .tag.tag-green Đã duyệt
              //- .tag.tag-red Đã hủy
            td.text-right 
              div 16:20
              div 01/01/2024
            td.text-left
              .box-actions 
                a(href="#" class="inner-edit")
                  <i class="fa-solid fa-pen-to-square"></i>
                a(href="#" class="inner-remove")
                  <i class="fa-solid fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  .section-7
    span(class="inner-label") Hiển thị 1 - 9 của 78
    select(class="inner-pagination")
      option Trang 1
      option Trang 2
      option Trang 3
  //- End Section 7