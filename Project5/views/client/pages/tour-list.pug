extends ../layouts/default.pug
include ../mixins/breadcrumb.pug
include ../mixins/product-item.pug

block main
  +breadcrumb(categoryDetail)

  .section-9
    .container
      .inner-wrap
        .inner-left
          .box-filter
            .inner-filter-list
              .inner-head
                .inner-title Bo Loc
                i.fa-solid.fa-filter

              .inner-group
                .inner-label Diem Di
                select(name="fromCity")
                  option(value="") --Chon Diem Di--
                  each city in cityList
                    option(value=city._id) #{ city.name }

              .inner-group
                .inner-label Diem Den
                select(name="toCity")
                  option(value="") --Chon Diem Den--
                  each city in cityList
                    option(value=city.name) #{ city.name }
              .inner-group
                .inner-label Ngay khoi hanh
                input(type="date" name="startDate")

              .inner-group
                .inner-label So Luong Hanh Khach
                .inner-list-input
                  .inner-input-item
                    .inner-label Nguoi Lon
                    input(type="number" value="0" name="adult")
                  .inner-input-item
                    .inner-label Tre em
                    input(type="number" value="0" name="child")
                  .inner-input-item
                    .inner-label Em be
                    input(type="number" value="0" name="baby")

              .inner-group
                .inner-label Muc Gia
                select(name="priceRange")
                  option(value="") -- Chon Khoang Gia --
                  option(value="0-999999") Duoi 1 Trieu
                  option(value="1000000-3000000") 1 - 3 Trieu
                  option(value="3000000-5000000") 3 - 5 Trieu
                  option(value="5000000-99999999") Tren 5 Trieu

              button.inner-button Ap Dung

          .inner-overlay

        .inner-right
          .inner-info1
            h2.inner-title #{ categoryDetail.name }
            .inner-des
              | !{ categoryDetail.description }

          .inner-info2
            .inner-sort
              .inner-label Sap Xep:
              button
                | Gia Tang Dan
                i.fa-solid.fa-arrow-up
              button
                | Gia Giam Dan
                i.fa-solid.fa-down-long
              button.active
                | Gia Khuyen Mai
                i.fa-solid.fa-tags
              button
                | Xem Nhieu
                i.fa-solid.fa-eye
            .inner-total-item
              | Tat Ca:
              b 101 Tour
            button.inner-button-filter
              | Bo Loc
              i.fa-solid.fa-filter

          .inner-list-tour
            if(tourList.length>0)
              each item in tourList
                +product-item(item)   
            else
              p Khong co tour nao trong danh muc nay.
          .box-pagination
            .inner-list-button
              button
                i.fa-solid.fa-angles-left
              button.active 1
              button 2
              button 3
              button 4
              button
                i.fa-solid.fa-angles-right
