mixin product-item(item)
  - const discount = Math.floor((item.priceAdult - item.priceNewAdult) / item.priceAdult * 100);
  .product-item
    .inner-image
      a(href=`/tour/detail/${item.slug}`)
        img(
          alt=item.name
          src=item.avatar
        )
    .inner-discount
      i.fa-solid.fa-bolt Giam #{discount}%
    .inner-content
      h3.inner-title
        a(href=`/tour/detail/${item.slug}`) #{item.name}
      .inner-prices
        .inner-price-old
          | #{item.priceAdult.toLocaleString("vi-VN")}
          span.inner-unit AUD
        .inner-price-new
          | #{item.priceNewAdult.toLocaleString("vi-VN")}
          span.inner-unit AUD
      .inner-desc
        //- div
        //-   | Ma Tour:
        //-   b 123456789
        div
          | Ngay Khoi Hanh:
          b #{item.departureDateFormat}
        div
          | Thoi Gian:
          b #{item.time}
      .inner-meta
        .inner-rating
          .inner-starts
            i.fa-solid.fa-star
            i.fa-solid.fa-star
            i.fa-solid.fa-star
            i.fa-solid.fa-star
            i.fa-regular.fa-star
          .inner-number (5)
        .inner-stock
          .inner-label So Cho Con:
          .inner-number #{item.stockAdult}
